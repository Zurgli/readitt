<div class="page-header">
  <h1>
    C votes
    <a href="/c_votes/new" class="btn btn-lg btn-success">New C vote</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Up</th>
        <th>User</th>
        <th>Comment</th>
        <th>Actions</th>
      </tr>

      <% @c_votes.each do |c_vote| %>
      <tr>
        <td><%= c_vote.up %></td>
        <td><%= c_vote.user.username %></td>
        <td><%= c_vote.comment.body %></td>
        <td>
          <a href="/c_votes/<%= c_vote.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == c_vote.user %>
            <a href="/c_votes/<%= c_vote.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_c_vote/<%= c_vote.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @c_votes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
