<div class="page-header">
  <h1>
    P votes
    <a href="/p_votes/new" class="btn btn-lg btn-success">New P vote</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Up</th>
        <th>User</th>
        <th>Post</th>
        <th>Actions</th>
      </tr>

      <% @p_votes.each do |p_vote| %>
      <tr>
        <td><%= p_vote.up %></td>
        <td>
          <% if p_vote.user.present? %>
            <a href="/users/<%= p_vote.user.id %>">
              <%= p_vote.user.username %>
            </a>
          <% end %>
        </td>
        <td>
          <% if p_vote.post.present? %>
            <a href="/posts/<%= p_vote.post.id %>">
              <%= p_vote.post.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/p_votes/<%= p_vote.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == p_vote.user %>
            <a href="/p_votes/<%= p_vote.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_p_vote/<%= p_vote.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @p_votes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
