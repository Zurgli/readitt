<div class="page-header">
  <h3>P Vote #<%= @p_vote.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Up</dt>
      <dd><%= @p_vote.up %></dd>

      <dt>User</dt>
      <dd>
        <% if @p_vote.user.present? %>
          <a href="/users/<%= @p_vote.user_id %>">
            <%= @p_vote.user.username %>
          </a>
        <% end %>
      </dd>

      <dt>Post</dt>
      <dd>
        <% if @p_vote.post.present? %>
          <a href="/posts/<%= @p_vote.post_id %>">
            <%= @p_vote.post.created_at %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/p_votes" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @p_vote.user %>
        <a href="/p_votes/<%= @p_vote.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_p_vote/<%= @p_vote.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
