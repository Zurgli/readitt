<div class="page-header">
  <h3>Subscription #<%= @subscription.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @subscription.user.present? %>
          <a href="/users/<%= @subscription.user_id %>">
            <%= @subscription.user.username %>
          </a>
        <% end %>
      </dd>

      <dt>Topic</dt>
      <dd>
        <% if @subscription.topic.present? %>
          <a href="/topics/<%= @subscription.topic_id %>">
            <%= @subscription.topic.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/subscriptions" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @subscription.user %>
        <a href="/subscriptions/<%= @subscription.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_subscription/<%= @subscription.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
